<div class="contextual">
  <%= form_tag({}, method: :get) do %>
      <label for='name_like'><%= l(:label_search) %>:</label>
      <%= text_field_tag 'name_like', params[:name_like], size: 30 %>
      <%= submit_tag l(:button_apply), class: "small", name_like: nil %>
  <% end %>
</div>

<h2><%= @custom_table.name %></h2>
<% html_title(@custom_table.name) %>

<% if @custom_table.custom_fields.present? %>
    <div>
      <%= render partial: 'query_form', locals: { query: @query, entities: @custom_entities, back_url: custom_table_path(@custom_table) } %>
    </div>
<% elsif CustomTable.editable? %>
    <div class="warning">
      <p>
        <strong><%= l(:help_please_configure_table_first, settings: link_to(l(:label_settings), edit_custom_table_path(@custom_table), title: l(:button_edit), class: 'icon icon-settings')).html_safe %></strong>
      </p>
    </div>
<% end %>
